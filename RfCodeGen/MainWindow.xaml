<Window x:Class="RfCodeGen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RfCodeGen"
        mc:Ignorable="d"
        Title="MainWindow" WindowState="Maximized">
    <Window.DataContext>
        <local:MainViewModel/>
    </Window.DataContext>
    <DockPanel LastChildFill="True">
        <ToolBarPanel DockPanel.Dock="Top">
            <ToolBarTray IsLocked="True">
                <ToolBar>
                    <Button Content="Generate" Click="Generate_Click"></Button>
                </ToolBar>
            </ToolBarTray>
        </ToolBarPanel>
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem Content="{Binding Path=EntityNames.Count}"></StatusBarItem>
        </StatusBar>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" Content="Source code path"></Label>
                <TextBox Grid.Column="1" IsReadOnly="True" Text="{Binding Path=ProjectFolder.FullName, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Stretch" VerticalContentAlignment="Center"/>
            </Grid>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <ToolBarPanel Grid.Row="0">
                        <ToolBarTray IsLocked="True">
                            <ToolBar>
                                <Button Content="Select All" Click="SelectAll_Click" ></Button>
                                <Button Content="Deselect All" Click="DeselectAll_Click"></Button>
                                <Separator></Separator>
                                <Button Content="Select New" Click="SelectNew_Click"></Button>
                                <Button Content="Select Existing" Click="SelectExisting_Click"></Button>
                                <Separator></Separator>
                                <Button Content="Invert Selection" Click="SelectInvert_Click"></Button>
                            </ToolBar>
                        </ToolBarTray>
                    </ToolBarPanel>

                    <ListBox Grid.Row="1" ItemsSource="{Binding Path=Entities}" Margin="5" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding Path=IsSelected}" Content="{Binding Path=Name}">
                                    <CheckBox.Style>
                                        <Style TargetType="CheckBox">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Path=HasPartial}" Value="True">
                                                    <Setter Property="FontWeight" Value="Bold"></Setter>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </CheckBox.Style>
                                </CheckBox>
                                <!--<TextBlock Text="{Binding}"/>-->
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>

                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="{Binding Path=AuxGenCode}"></TextBlock>

                    <ListBox Grid.Row="1"
                             ItemsSource="{Binding Path=Messages}"
                             >
                    </ListBox>
                </Grid>
            </Grid>
        </Grid>
    </DockPanel>
</Window>
